<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".merchandising.MerchantDashboardActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="horizontal"
            android:weightSum="9">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/box_bg">


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <!-- Central cirle view -->
                        <RelativeLayout
                            android:id="@+id/rl_circle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_scrollFlags="scroll|exitUntilCollapsed">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/profile_image"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:src="@color/transparent"
                                    app:civ_border_color="@color/transparent"
                                    app:civ_border_width="0dp" />

                                <ImageView
                                    android:id="@+id/img_dollar"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_above="@+id/txt_center"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ecommerce" />

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|right">

                                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="#5b5196"
                                        app:civ_border_color="#00000000"
                                        app:civ_border_width="0dp" />

                                    <TextView
                                        android:id="@+id/txtTotalCustomer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_8sdp" />
                                </FrameLayout>

                            </FrameLayout>

                        </RelativeLayout>

                        <TextView
                            fontPath="@string/medium_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="Total Scheduled\nCalls"
                            android:textColor="#5b5196"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/box_bg">


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <!-- Central cirle view -->
                        <RelativeLayout
                            android:id="@+id/rl_circle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_scrollFlags="scroll|exitUntilCollapsed">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/profile_image1"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:src="@color/transparent"
                                    app:civ_border_color="@color/transparent"
                                    app:civ_border_width="0dp" />

                                <ImageView
                                    android:id="@+id/img_dollar1"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_above="@+id/txt_center"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:background="@drawable/order" />

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|right">

                                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="#5b5196"
                                        app:civ_border_color="#00000000"
                                        app:civ_border_width="0dp" />

                                    <TextView
                                        android:id="@+id/txtVisitedCustomer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_8sdp" />
                                </FrameLayout>

                            </FrameLayout>

                        </RelativeLayout>

                        <TextView
                            fontPath="@string/medium_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="Total Scheduled\nCalls Done"
                            android:textColor="#5b5196"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/box_bg">


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <!-- Central cirle view -->
                        <RelativeLayout
                            android:id="@+id/rl_circle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_scrollFlags="scroll|exitUntilCollapsed">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/profile_image2"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:src="@color/transparent"
                                    app:civ_border_color="@color/transparent"
                                    app:civ_border_width="0dp" />

                                <ImageView
                                    android:id="@+id/img_dollar2"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_above="@+id/txt_center"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:background="@drawable/wrong_file" />


                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|right">

                                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="#5b5196"
                                        app:civ_border_color="#00000000"
                                        app:civ_border_width="0dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_8sdp" />
                                </FrameLayout>

                            </FrameLayout>
                        </RelativeLayout>

                        <TextView
                            fontPath="@string/medium_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="Total Scheduled\nCalls Completed"
                            android:textColor="#5b5196"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
            fontPath="@string/bold_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:text="Journey Plan"
            android:textAllCaps="true"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/_15sdp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_160sdp"
                android:orientation="vertical"
                app:cardBackgroundColor="#396D9D"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="30dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/box_bg">


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="vertical">

                        <!-- Central cirle view -->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            app:layout_scrollFlags="scroll|exitUntilCollapsed">

                            <com.mobiato.sfa.utils.TwoLevelCircularProgressBar
                                android:id="@+id/custom_progress4"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                app:tlcp_progress="0"
                                app:tlcp_progress2="0"
                                app:tlcp_progress2_color="@color/progress2"
                                app:tlcp_progress_color="@color/progress1"
                                app:tlcp_strokeWidth="5dp" />

                            <TextView
                                android:id="@+id/tvMainProgress"
                                fontPath="@string/bold_font"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="@color/progress1" />

                        </FrameLayout>

                        <TextView
                            fontPath="@string/medium_font"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Journey Plan Completion\n Percentage"
                            android:textColor="#5b5196"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_160sdp"
                app:cardBackgroundColor="#396D9D"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="30dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/box_bg">


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="vertical">

                        <!-- Central cirle view -->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            app:layout_scrollFlags="scroll|exitUntilCollapsed">


                            <com.mobiato.sfa.utils.TwoLevelCircularProgressBar
                                android:id="@+id/custom_progress"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                app:tlcp_progress="0"
                                app:tlcp_progress2="0"
                                app:tlcp_progress2_color="@color/progress2"
                                app:tlcp_progress_color="@color/progress1"
                                app:tlcp_strokeWidth="5dp" />


                            <TextView
                                android:id="@+id/tvMainSell"
                                fontPath="@string/bold_font"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="@color/progress2" />

                        </FrameLayout>

                        <TextView
                            fontPath="@string/medium_font"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Progress \nCompliance"
                            android:textColor="#5b5196"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>