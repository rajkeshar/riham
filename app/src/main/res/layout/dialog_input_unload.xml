<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="2dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:id="@+id/txt_name"
                    fontPath="@string/medium_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:maxEms="12"
                    android:text="NAME"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/progress1" />

                <LinearLayout
                    android:id="@+id/ll_selling"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        fontPath="@string/medium_font"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:maxEms="12"
                        android:text="System Qty"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/edt_sale_alter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_6sdp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_row_cust"
                            android:clickable="false"
                            android:editable="false"
                            android:ems="3"
                            android:enabled="false"
                            android:hint="Cases"
                            android:inputType="number"
                            android:lines="1"
                            android:padding="@dimen/_6sdp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/darkBlack"
                            android:textColorHint="@color/darkBlack" />

                        <EditText
                            android:id="@+id/edt_sale_base"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_6sdp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_row_cust"
                            android:clickable="false"
                            android:editable="false"
                            android:ems="3"
                            android:enabled="false"
                            android:hint="Pcs"
                            android:inputType="number"
                            android:lines="1"
                            android:padding="@dimen/_6sdp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/darkBlack"
                            android:textColorHint="@color/darkBlack" />

                    </LinearLayout>
                </LinearLayout>

                <!-- Empty Layout -->
                <LinearLayout
                    android:id="@+id/ll_empty"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        fontPath="@string/medium_font"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:maxEms="12"
                        android:text="Actual Qty"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/edt_act_alter"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_6sdp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_row_cust"
                            android:ems="3"
                            android:hint="Cases"
                            android:inputType="number"
                            android:lines="1"
                            android:padding="@dimen/_6sdp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/darkBlack"
                            android:textColorHint="@color/darkBlack" />

                        <EditText
                            android:id="@+id/edt_act_base"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_6sdp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_row_cust"
                            android:ems="3"
                            android:hint="Pcs"
                            android:inputType="number"
                            android:lines="1"
                            android:padding="@dimen/_6sdp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/darkBlack"
                            android:textColorHint="@color/darkBlack" />

                    </LinearLayout>
                </LinearLayout>
                <!-- Empty Layout -->
                <LinearLayout
                    android:id="@+id/ll_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        fontPath="@string/medium_font"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:maxEms="12"
                        android:text="Reason"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_weight="2"
                        android:background="@drawable/rounded_row_cust"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/sp_reason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_6sdp"
                            android:background="@android:color/transparent"
                            android:hint="Psc" />

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/collpse" />
                    </RelativeLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_confirm"
                    fontPath="@string/medium_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:background="@drawable/rounded_corner_green"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingRight="@dimen/_18sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Confirm"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/white" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>