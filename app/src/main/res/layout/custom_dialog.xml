<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Scan QR/Barcode"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/img_scan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_98sdp"
        android:layout_gravity="center"
        android:src="@drawable/ic_scaner"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/btn_fill_rectangle"
            android:paddingLeft="@dimen/_18sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingRight="@dimen/_18sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:text="Scan Code"
            android:textSize="@dimen/_12sdp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="@color/white" />

        <Button
            android:visibility="gone"
            android:id="@+id/btn_manual"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/btn_fill_rectangle"
            android:paddingLeft="@dimen/_18sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingRight="@dimen/_18sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            android:text="Manual Enter Code"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>