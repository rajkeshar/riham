<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.AddSalesmanLoadActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_100">

        <LinearLayout
            android:id="@+id/lytStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/progress1"
            android:orientation="vertical">

            <com.shuhart.stepview.StepView
                android:id="@+id/step_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:padding="16dp"
                app:sv_animationType="All"
                app:sv_stepPadding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lytStep"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <TextView
                android:id="@+id/tvTitle"
                fontPath="@string/regular_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select For whom you want to create Load"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/darkBlack" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytSelectionView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lytText"
            android:layout_margin="@dimen/_8sdp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Load Date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/lytDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="visible"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardCornerRadius="6dp"
                    card_view:cardElevation="2dp"
                    card_view:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/et_date"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:background="@android:color/transparent"
                        android:drawableRight="@drawable/ic_keyboard_arrow_down"
                        android:gravity="center_vertical"
                        android:hint="Load Date"
                        android:paddingLeft="@dimen/_7sdp"
                        android:paddingRight="@dimen/_7sdp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray" />
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/lytDepot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="visible"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardCornerRadius="6dp"
                    card_view:cardElevation="2dp"
                    card_view:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/et_depot"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:background="@android:color/transparent"
                        android:drawableRight="@drawable/ic_keyboard_arrow_down"
                        android:gravity="center_vertical"
                        android:hint="Select Type"
                        android:paddingLeft="@dimen/_7sdp"
                        android:paddingRight="@dimen/_7sdp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray" />
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Route"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/lytRoute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="visible"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardCornerRadius="6dp"
                    card_view:cardElevation="2dp"
                    card_view:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/et_route"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:background="@android:color/transparent"
                        android:drawableRight="@drawable/ic_keyboard_arrow_down"
                        android:gravity="center_vertical"
                        android:hint="Select Route"
                        android:paddingLeft="@dimen/_7sdp"
                        android:paddingRight="@dimen/_7sdp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray" />
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Salesman"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/lytSalesman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="visible"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardCornerRadius="6dp"
                    card_view:cardElevation="2dp"
                    card_view:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/et_salesman"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:background="@android:color/transparent"
                        android:drawableRight="@drawable/ic_keyboard_arrow_down"
                        android:gravity="center_vertical"
                        android:hint="Select Salesman"
                        android:paddingLeft="@dimen/_7sdp"
                        android:paddingRight="@dimen/_7sdp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytItemView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lytText"
            android:layout_margin="@dimen/_8sdp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/lytCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:orientation="horizontal"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    tools:listitem="@layout/row_item_category" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytNoData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/lytCat"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvNoText"
                    fontPath="@string/medium_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Items for this category in VanStock!"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/darkBlack" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:visibility="visible"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytReView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lytText"
            android:layout_margin="@dimen/_8sdp"
            android:orientation="vertical"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:visibility="visible"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_10sdp"
            app:srcCompat="@drawable/ic_arrow_next" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_10sdp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_arrow_previous" />

    </RelativeLayout>
</layout>